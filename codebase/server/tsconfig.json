{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 